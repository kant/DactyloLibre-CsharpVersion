<Window x:Class="DactyloLibre.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DactyloLibre"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1024" FontFamily="Calibri" Background="#FF24252A">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="5*"/>
			<RowDefinition Height="10*"/>
			<RowDefinition Height="50*"/>
			<RowDefinition Height="15*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="10*"/>
			<ColumnDefinition Width="10*"/>
			<ColumnDefinition Width="10*"/>

			<ColumnDefinition Width="10*"/>
			<ColumnDefinition Width="10*"/>
			<ColumnDefinition Width="10*"/>

			<ColumnDefinition Width="10*"/>
			<ColumnDefinition Width="10*"/>
			<ColumnDefinition Width="10*"/>
		</Grid.ColumnDefinitions>
        <Button Content="A propos" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontWeight="Bold" FontSize="18" ClickMode="Press" BorderBrush="{x:Null}" Background="White" Click="aboutClick"/>
        <Button Content="importer text" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" FontWeight="Bold" FontSize="18" BorderBrush="{x:Null}" Background="White" Click="importTextButton" ClickMode="Press"/>
        <TextBox VerticalContentAlignment="Center" Margin="10,0" x:Name="nameUser" Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="3" FontWeight="Bold" FontSize="18" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="White" Text="Nom"/>
        <Button Content="Lancer !" Grid.Row="0" Grid.Column="7" Grid.ColumnSpan="2" FontWeight="Bold" FontSize="18" BorderBrush="{x:Null}" Background="White" Click="playDactylo" ClickMode="Press"/>
		<Label x:Name="charachterCount" Content="Caractères" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" FontSize="18" Foreground="White" VerticalContentAlignment="Center"/>
		<Label Content="Temps" Grid.Row="1" Grid.Column="3" FontSize="18" Foreground="White" VerticalContentAlignment="Center"/>
		<Label x:Name="timerShow" Content="0" Grid.Row="1" Grid.Column="4" FontSize="18" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
		<Label x:Name="alertLabel" Grid.Row="1" Grid.Column="6" Grid.ColumnSpan="3" FontSize="18" FontWeight="Bold" Foreground="White" VerticalContentAlignment="Center"/>
		<RichTextBox Background="#FF34495E" Grid.Row="2" Foreground="White" FontSize="42" Grid.ColumnSpan="9" SelectionBrush="{x:Null}" BorderBrush="{x:Null}" IsReadOnly="True">
			<FlowDocument>
				<Paragraph >
                    <Run  x:Name="textPreview" Text="TEXT TO TYPE"/>
				</Paragraph>
			</FlowDocument>
		</RichTextBox>
		<Label x:Name="historyKeyPressed3" Grid.Row="3" Grid.Column="0" Margin="0,20" Background="#FFBDC3C7" FontSize="50" FontWeight="Bold" Foreground="White" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="historyKeyPressed2" Grid.Row="3" Grid.Column="1" Margin="0,20" Background="#FFBDC3C7" FontSize="50" FontWeight="Bold" Foreground="White" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="historyKeyPressed1" Grid.Row="3" Grid.Column="2" Margin="0,20" Background="#FFBDC3C7" FontSize="50" FontWeight="Bold" Foreground="White" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

        <TextBox MaxLength="1" x:Name="showKeyPressed" Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="1" Background="#FFBDC3C7" FontSize="50" FontWeight="Bold" Foreground="White" HorizontalContentAlignment="Center" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" TextChanged="keyDown"/>
        <Image Grid.Row="3" Grid.Column="4" Source="/img/Dactylolibre_Info.png"/>
        <Label x:Name="previewError" Grid.Row="3" Grid.Column="5" Background="#FFBDC3C7" FontSize="50" FontWeight="Bold" Foreground="White" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

        <Label x:Name="historyKeyToPressed1" Grid.Row="3" Grid.Column="6" Margin="0,20" Background="#FFBDC3C7" FontSize="50" FontWeight="Bold" Foreground="White" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="historyKeyToPressed2" Grid.Row="3" Grid.Column="7" Margin="0,20" Background="#FFBDC3C7" FontSize="50" FontWeight="Bold" Foreground="White" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="historyKeyToPressed3" Grid.Row="3" Grid.Column="8" Margin="0,20" Background="#FFBDC3C7" FontSize="50" FontWeight="Bold" Foreground="White" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>




    </Grid>
</Window>
